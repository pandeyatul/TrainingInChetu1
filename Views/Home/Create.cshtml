@model TrainingInChetu.Models.ViewModels.CustomerViewModel
@{
    ViewData["Title"] = "Create";
}
<div class="container">
    <div class="col-6 offset-3">
        <div class="card">
            <div class="card-header">
                <h4 style="text-align:center">Create Customers Data</h4>
            </div>
            <div class="card-body">
                <form asp-action="Create" asp-controller="Home" method="post">
                  
                    <div class="form-group">
                        <label asp-for="@Model.Name"></label>
                        <input asp-for="@Model.Name" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Contactno"></label>
                        <input class="form-control" asp-for="@Model.Contactno" />
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.EmailId"></label>
                        <input class="form-control" asp-for="@Model.EmailId" />
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Address"></label>
                        <input class="form-control" asp-for="@Model.Address" />
                    </div>
                    <div class="form-group dropdown">
                        <label asp-for="@Model.Location"></label>
                        <select class="form-control" asp-for="@Model.Location">
                            <option value="value">Select Location</option>
                            @foreach(var loc in ViewBag.location)
                                {
                                    <option value="@loc.Id">@loc.City</option>
                                }
                        </select>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-success" type="submit">Save Data</button>
                    </div>
                </form>
            </div>
            <div class="card-footer" style="text-align:center">
                <p>---This is copyright Website---</p>
            </div>
        </div>

    </div>

</div>

